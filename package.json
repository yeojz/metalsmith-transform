{
  "name": "metalsmith-transform",
  "version": "1.3.0",
  "description": "Transform or manipulate file objects in the metalsmith pipeline",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel ./src --out-dir ./lib",
    "clean": "rimraf lib coverage .nyc_output",
    "coverage": "nyc report --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint --ext js src test",
    "test": "nyc --reporter=text-summary mocha 'test/**/*.spec.js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yeojz/metalsmith-transform.git"
  },
  "keywords": [
    "metalsmith",
    "static-site",
    "generator",
    "append",
    "prepend",
    "wrap",
    "transform",
    "metalsmith-plugin",
    "custom-functions"
  ],
  "author": "Gerald Yeo <contact@fusedthought.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yeojz/metalsmith-transform/issues"
  },
  "homepage": "https://github.com/yeojz/metalsmith-transform",
  "dependencies": {
    "async": "^2.1.5",
    "multimatch": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.0.0",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^2.13.0",
    "eslint": "^4.1.0",
    "metalsmith": "^2.3.0",
    "mocha": "^3.2.0",
    "nyc": "^11.0.0",
    "rimraf": "^2.6.1"
  }
}
